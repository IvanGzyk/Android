<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9F6CA">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_lock_power_off"
            tools:layout_editor_absoluteX="360dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/config"
            android:layout_width="134dp"
            android:layout_height="133dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="157dp"
            tools:srcCompat="@drawable/engrenagem" />

        <ImageView
            android:id="@+id/salao"
            android:layout_width="134dp"
            android:layout_height="133dp"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="157dp"
            tools:srcCompat="@drawable/ballons" />

        <ImageView
            android:id="@+id/financeiro"
            android:layout_width="134dp"
            android:layout_height="133dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            app:layout_constraintEnd_toStartOf="@+id/avisos"
            tools:layout_editor_absoluteY="343dp"
            tools:srcCompat="@drawable/afirmacao" />

        <ImageView
            android:id="@+id/avisos"
            android:layout_width="134dp"
            android:layout_height="133dp"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="343dp"
            tools:srcCompat="@drawable/quadro-de-noticias" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>